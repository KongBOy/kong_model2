{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "python.linting.pylintEnabled":false,
    "python.linting.flake8Enabled":true,
    "python.linting.flake8Args": [  "--max-line-length=1000",
                                    "--ignore=E266,E262,E401,E402,E126,E128,E221,E222,E203,E701,E741,E303,E302,E241,E271,E211,E202,E272,E702,E251,E201,E123,F405,E704,E111,E113,E999,E124,W504,F541,E127,E305,F403",],
    // "python.linting.flake8CategorySeverity.E": "Warning",  //
    "python.linting.flake8CategorySeverity.F": "Warning",
    "diffEditor.ignoreTrimWhitespace": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    }, // Warning 改成 F 吧，詳細去 Chrome書籤 看
    // "workbench.colorCustomizations": {
    //     "editorError.foreground": "#00ff00"
    // }
	"python.languageServer": "Pylance",
	"editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.editor.languageDetection": false,
    "timeline.excludeSources": [
        "timeline.localHistory"
    ],
    "window.zoomLevel": -1,
    "terminal.integrated.scrollback": 50000,
}